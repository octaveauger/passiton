<div class="row">
  <div class="col-sm-12">
    <h1>Give context</h1>
    <p class="lead">
      Approve, deny or revoke requests for context from your teammates.
    </p>
  </div>
</div>
<hr>
<div class="row center-block hidden-xs">
  <% if @authorisations.any? %>
    <div class="col-sm-1">
      <h3>Date</h3>
    </div>
    <div class="col-sm-2">
      <h3>Requester</h3>
    </div>
    <div class="col-sm-offset-1 col-sm-3">
      <h3>About</h3>
    </div>
    <div class="col-sm-1">
      <h3>Status</h3>
    </div>
  </div>
	<div id="results" data-target="<%= authorisation_grant_path %>">
    <%= render partial: 'authorisations/requested_authorisation', collection: @authorisations %>
  </div>
  <% else %>
  	<p>No one has requested access to your emails yet.</p>
  <% end %>
</div>
