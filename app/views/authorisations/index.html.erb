<div class="container">
  <div class="row centered">
    <h1>Email access you requested</h1>
    <%= link_to 'Ask for new access', authorisation_request_path, class: 'btn btn-primary btn-lg obj-size-4of9' %>
  </div>

  <div class="row">
    <div class="col-md-3 col-md-offset-9">

    </div>
  </div>

  <div class="row">
    <% if @authorisations.any? %>
    	<table class="table table-hover">
        <tr>
          <th>Date</th>
          <th>From</th>
          <th>About</th>
          <th>State</th>
          <th></th>
        </tr>
    		<%= render partial: 'authorisations/authorisation', collection: @authorisations %>
    	</table>
    <% else %>
      <p>You haven't requested any access yet.</p>
    <% end %>
  </div>
</div>
