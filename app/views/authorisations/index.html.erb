<div class="container">
  <div class="row centered">
    <h1>Email access you requested</h1>
  </div>
  <div class="row hidden-xs">
      <%= link_to 'Ask for new access', authorisation_request_path, class: 'btn btn-primary pull-right' %>
  </div>
  <div class="row visible-xs-block">
      <%= link_to 'Ask for new access', authorisation_request_path, class: 'btn btn-primary obj-size-4of9 center-block' %>
  </div>

  <div class="row">
    <% if @authorisations.any? %>
    	<table class="table table-hover table-responsive">
        <tr>
          <th>Date</th>
          <th>From</th>
          <th>About</th>
          <th>State</th>
          <th></th>
        </tr>
    		<%= render partial: 'authorisations/authorisation', collection: @authorisations %>
    	</table>
    <% else %>
      <p>You haven't requested any access yet.</p>
    <% end %>
  </div>
</div>
