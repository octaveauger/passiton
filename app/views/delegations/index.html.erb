<% provide(:title, 'Manage your team') %>
<% if @delegations.any? %>
  <div class="row">
    <div class="col-sm-12">
      <h1>Manage your team
        <%= link_to 'New delegation', new_delegation_path, class: 'btn btn-primary pull-right hidden-xs' %>
      </h1>
      <p class="lead">
        Passiton lets your team share context with teammates. As a manager, you can approve requests on their behalf - useful if they go on holiday or leave the company.
      </p>
      <p>
        <%= link_to 'New delegation', new_delegation_path, class: 'btn btn-primary pull-left visible-xs-block' %>
      </p>
    </div>
  </div>
  <hr>
  <div class="row center-block hidden-xs">
    <div class="col-sm-3">
      <h3>Date</h3>
    </div>
    <div class="col-sm-3">
      <h3>Teammate</h3>
    </div>
    <div class="col-sm-3">
      <h3>State</h3>
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div id="results">
    <%= render partial: 'delegations/delegation', collection: @delegations %>
  </div>
<% else %>
  <div class="row">
    <div class="col-sm-12">
      <h1>Hi <%= current_user.first_name %>, let's manage your team</h1>
      <p class="lead">
        Passiton lets your team share context with teammates. As a manager, you can approve requests on their behalf - useful if they go on holiday or leave the company.
      </p>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-3 col-sm-offset-2 well">
      <p class="centered lead">Get started</p>
      <p class="centered">Ask a teammate to <br> manage their Passiton account</p>
      <%= link_to 'New delegation', new_delegation_path, class: 'btn btn-primary center-block' %>
    </div>
  </div>
<% end %>