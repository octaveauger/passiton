<div class="row">
  <div class="col-md-12">
    <h1>Requests</h1>
    <p class="lead">
      Here are all requests you have received from others.
    </p>
  </div>
</div>
<hr>
<div class="row center-block hidden-xs">
  <% if @authorisations.any? %>
    <div class="col-md-1">
      <h3>Date</h3>
    </div>
    <div class="col-md-2">
      <h3>Requester</h3>
    </div>
    <div class="col-md-offset-1 col-md-3">
      <h3>About</h3>
    </div>
    <div class="col-md-1">
      <h3>Status</h3>
    </div>
  </div>
	<%= render partial: 'authorisations/requested_authorisation', collection: @authorisations %>
  <% else %>
  	<p>No one has requested access to your emails yet.</p>
  <% end %>
</div>
